<?xml version="1.0"?>
<!-- fonts/EmbeddedFontFace.mxml -->
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009"    
    xmlns:mx="library://ns.adobe.com/flex/mx"     
    xmlns:s="library://ns.adobe.com/flex/spark" preinitialize="preinit(event);">

  <fx:Style>
     @namespace s "library://ns.adobe.com/flex/spark";

     @font-face {
        src:url("../../../assets/BEBAS.TTF");
        fontFamily: myFontFamily;
        embedAsCFF: true;
     }
     
     .letter{
       fontFamily: myFontFamily;
       fontSize:100;
     }     
  </fx:Style>

  <fx:Script>

    import mx.core.FlexGlobals;
    import mx.events.FlexEvent;

    [Bindable]
    private var letter:String = "?";

    private function preinit(event:FlexEvent):void{
    	var theLetter:String = FlexGlobals.topLevelApplication.parameters.letter;
  	if(theLetter){
    		letter = theLetter;
    	};
    }

  </fx:Script>

  <s:Group width="100%" height="100%">
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle" horizontalAlign="center"/>
    </s:layout>
    <s:Label styleName="letter" text="{letter}"/>
  </s:Group>
</s:Application>
