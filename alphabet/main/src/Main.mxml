<?xml version="1.0"?>
<!-- fonts/EmbeddedFontFace.mxml -->
<s:Application 
    xmlns:fx="http://ns.adobe.com/mxml/2009"    
    xmlns:mx="library://ns.adobe.com/flex/mx"     
    xmlns:s="library://ns.adobe.com/flex/spark" preinitialize="preinit(event);">

  <s:layout> 
   <s:VerticalLayout/> 
  </s:layout>

  <fx:Script>

    import mx.core.FlexGlobals;
    import mx.events.FlexEvent;

    [Bindable]
    private var letter:String = "?";

    private function preinit(event:FlexEvent):void{
    	var theLetter:String = FlexGlobals.topLevelApplication.parameters.letter;
  	if(theLetter){
    		letter = theLetter;
    	};
    }

  </fx:Script>

  <s:Group width="100%" height="100%">
    <s:layout>
        <s:HorizontalLayout verticalAlign="middle" horizontalAlign="center"/>
    </s:layout>
    <s:Label styleName="letter" text="{letter}"/>
  </s:Group>
</s:Application>
